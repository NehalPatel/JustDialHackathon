{
  "info": {
    "name": "JustDial Moderation API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Moderation",
      "item": [
        {
          "name": "Analyze Video",
          "request": {
            "method": "POST",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": { "raw": "{{baseUrl}}/api/v1/moderation/analyze", "host": ["{{baseUrl}}"], "path": ["api","v1","moderation","analyze"] },
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "video", "type": "file", "src": [] },
                { "key": "watermark", "type": "text", "value": "PlatformX" },
                { "key": "config", "type": "text", "value": "{\"nuditySensitivity\":\"moderate\",\"copyrightThreshold\":50,\"fraudSensitivity\":\"moderate\"}" }
              ]
            }
          }
        },
        {
          "name": "Get Moderation Result",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": { "raw": "{{baseUrl}}/api/v1/moderation/{{videoId}}", "host": ["{{baseUrl}}"], "path": ["api","v1","moderation","{{videoId}}"] }
          }
        },
        {
          "name": "List Moderations",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": { "raw": "{{baseUrl}}/api/v1/moderation?decision=approved", "host": ["{{baseUrl}}"], "path": ["api","v1","moderation"], "query": [{ "key": "decision", "value": "approved" }] }
          }
        },
        {
          "name": "Save Plugin Settings",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": { "raw": "{{baseUrl}}/api/v1/moderation/settings", "host": ["{{baseUrl}}"], "path": ["api","v1","moderation","settings"] },
            "body": { "mode": "raw", "raw": "{\n  \"nuditySensitivity\": \"moderate\",\n  \"copyrightThreshold\": 50,\n  \"fraudSensitivity\": \"moderate\"\n}" }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3001" },
    { "key": "token", "value": "" },
    { "key": "videoId", "value": "" }
  ]
}